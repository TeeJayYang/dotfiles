        threshold_type = time
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
        pidfile = "/var/run/vpnc/pid"
}

tztime local {
	format = "%a %b %_d %Y %l:%M %p"
	#format = "%d.%m.%Y %l:%M"	
