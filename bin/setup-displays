#!/bin/sh
if (xrandr | grep -q "\bDP-1-1 connected\b") && (xrandr | grep -q "\bDP-1-3 connected\b") ; then
    xrandr --output eDP-1 --primary --mode 1920x1080 --pos 0x840 --rotate normal \
        --output DP-1-1 --mode 1920x1080 --pos 1920x0 --rotate left \
        --output DP-1-3 --mode 1920x1080 --pos 3000x496 --rotate normal
else
  xrandr --output eDP-1 --mode 1920x1080 --primary
  xrandr --output DP-1-1 --off
  xrandr --output DP-1-3 --off
fi
