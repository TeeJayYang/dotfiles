#!/bin/sh
if (xrandr | grep -q "\bDP-3-1 connected\b") && (xrandr | grep -q "\bDP-3-3 connected\b") ; then
    xrandr --output eDP-1 --primary --mode 2560x1440 --pos 0x1204 --rotate normal --output DP-1 --off --output DP-2 --off --output DP-3 --off --output DP-3-1 --mode 1920x1080 --pos 2560x0 --rotate left --output DP-3-2 --off --output DP-3-3 --mode 1920x1080 --pos 3640x420 --rotate normal
else
  xrandr --output eDP-1 --mode 2560x1440 --primary
  xrandr --output DP-3-1 --off
  xrandr --output DP-3-3 --off
fi
