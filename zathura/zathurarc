# zoom and scroll step size
set zoom-step 20
set scroll-step 80

# copy selection to system clipboard
set selection-clipboard clipboard

# enable incremental search
set incremental-search true

# Open document in "best-fit" mode by default.
set adjust-open "best-fit"

# replace $HOME with ~
set statusbar-home-tilde true

# zoom
map = zoom in
map - zoom out

map <Space> navigate next
map <S-Space> navigate previous

# colors according to onedark
set recolor-lightcolor "#282C34"
set recolor-darkcolor "#ABB2BF"

set highlight-color "#D19A66"
set highlight-active-color "#E5C07B"
set highlight-transparency 0.1
